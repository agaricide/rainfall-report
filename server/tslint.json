{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [
      true,
      "never"
    ],
    "object-literal-sort-keys": false,
    "no-console": false,
    "class-name": false,
    "curly": [true, "ignore-same-line"]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}